{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Iduser</th>
                <td>{{ ticket.iduser }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ ticket.date ? ticket.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Idcinema</th>
                <td>{{ ticket.idcinema }}</td>
            </tr>
            <tr>
                <th>Idsalle</th>
                <td>{{ ticket.idsalle }}</td>
            </tr>
            <tr>
                <th>Chaise</th>
                <td>{{ ticket.chaise }}</td>
            </tr>
            <tr>
                <th>Idevent</th>
                <td>{{ ticket.idevent }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ ticket.montant }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ticket_index') }}">back to list</a>

    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('ticket/_delete_form.html.twig') }}

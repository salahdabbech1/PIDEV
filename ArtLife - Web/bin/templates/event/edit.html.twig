{% extends 'base.html.twig' %}

{% block title %}New Event{% endblock %}

{% block body %}
    <section class="main-content">

        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-default">
                        Events
                    </div>
                    <div class="card-body">
                        <h1>Create new Event</h1>

                        {{ form_start(form,{attr: {novalidate: 'novalidate'}}) }}
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name,{'attr' : {'placeholder' : 'Saisir le nom' }}) }}

                        {{ form_label(form.idcontent) }}
                        {{ form_widget(form.idcontent,{'attr' : {'placeholder' : 'Choisir lid du idcontent' }}) }}

                        {{ form_label(form.idcinema) }}
                        {{ form_widget(form.idcinema) }}

                        {{ form_label(form.datedeb) }}
                        {{ form_widget(form.datedeb) }}

                        {{ form_label(form.type) }}
                        {{ form_widget(form.type,{'attr' : {'placeholder' : 'Saisir le type' }}) }}


                        {{ form_label(form.datefin) }}
                        {{ form_widget(form.datefin,{'attr' : {'placeholder' : 'Saisir le type' }}) }}

                        {{ form_label(form.adresse) }}
                        {{ form_widget(form.adresse) }}


                        <div class="form-group col-md-6">



                            <label for="{{ form.image.vars.id }}">{{ form_label(form.image) }}</label>
                            <div class="fileinput-new" data-provides="fileinput">
                                <div class="fileinput-preview" data-trigger="fileinput" style="width: 200px; height:150px;"></div>
                                <span class="btn btn-primary  btn-file">
												<span class="fileinput-new">Select</span>
												<span class="fileinput-exists">Change</span>
												<input type="file" id="{{ form.image.vars.id }}" name="{{ form.image.vars.full_name }}" value="{{ form.image.vars.value }}">
											</span>
                                <a href="#" class="btn btn-danger fileinput-exists" data-dismiss="fileinput">Remove</a>
                                {% do form.image.setRendered %}
                            </div>
                        </div>
                        <a href="{{ path('event') }}"class="btn btn-primary"><i class="fa fa-arrow-left"></i></a>
                        <button class="btn btn-success btn-rounded box-shadow ml-5">Update <i class="fa fa-save"></i></button>

                        {{ form_end(form) }}



                    </div>
                </div>
            </div>
        </div>



        <footer class="footer">
            <span>Copyright &copy; 2018 FixedPlus</span>
        </footer>


    </section>
{% endblock %}
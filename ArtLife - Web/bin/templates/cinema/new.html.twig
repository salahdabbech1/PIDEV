{% extends 'base.html.twig' %}

{% block title %}New Cinema{% endblock %}

{% block body %}
    <h1>Create new Cinema</h1>
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.nbsalle) }}
    {{ form_row(form.adresse) }}

    <div class="form-group col-md-6">


        <label for="{{ form.image.vars.id }}"><label for="{{ form.image.vars.id }}" class="required">Image</label></label>
        <div class="fileinput-new" data-provides="fileinput">
            <div class="fileinput-preview" data-trigger="fileinput" style="width: 200px; height:150px;"></div>
            <span class="btn btn-primary  btn-file">
												<span class="fileinput-new">Select</span>
												<span class="fileinput-exists">Change</span>
												<input type="file" id="{{ form.image.vars.id }}" name="{{ form.image.vars.full_name }}" value="">
											</span>
            <a href="#" class="btn btn-danger fileinput-exists" data-dismiss="fileinput">Remove</a>

        </div>
        {% do form.image.setRendered %}

    </div>
    {{ form_row(form.description) }}
    {{ form_row(form.rate) }}
    <button href="{{ path('cinema_index') }}" >{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}


    <a href="{{ path('cinema_index') }}">back to list</a>
{% endblock %}

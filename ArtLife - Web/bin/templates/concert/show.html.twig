{% extends 'film/indexAdmin.html.twig' %}
{% block title %}Concert{% endblock %}

{% block body %}
    <section class="main-content" style="    margin-left: 0px;">

    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-default">
                    Concerts
                </div>
                <div class="card-body">
    <h1>Concert</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ concert.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ concert.name }}</td>
            </tr>
            <tr>
                <th>Idmusician</th>
                <td>{{ concert.idmusician }}</td>
            </tr>
            <tr>
                <th>Musics</th>
                <td>{{ concert.musics }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ concert.image }}</td>
            </tr>
            <tr>
                <th>Trailer</th>
                <td>{{ concert.trailer }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('concert_index') }}"class="btn btn-primary"><i class="fa fa-arrow-left"></i></a>

    <a href="{{ path('concert_edit', {'id': concert.id}) }}"class="btn btn-sm btn-success"><i class="fa fa-pencil-square"></i></a>
                    <a href="{{ path('deleteC', {'id': concert.id}) }}" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>

                </div>
            </div>
        </div>
    </div>



    <footer class="footer">
        <span>Copyright &copy; 2018 FixedPlus</span>
    </footer>


</section>
{% endblock %}

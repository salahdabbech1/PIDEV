{{ form_start(form) }}
    <div class="row">
        {{ form_row(form.content) }}
        {{ form_row(form.idUser) }}
        {{ form_row(form.idFilm) }}
        {{ form_row(form.likes) }}
        {{ form_row(form.Date) }}
        <div class="col-xs-12">
            <div class="form-group">
                <textarea id="{{ form.content.vars.id }}" name="{{ form.content.vars.full_name }}" style="height: 100px;width: 800px;" class="form-input" required="" placeholder="Your text"></textarea>
            </div>
        </div>
        {% do form.content.setRendered %}
        <button class="btn btn-primary pull-right" style="height:40px;">{{ button_label|default('Save') }}</button>
    </div>

{{ form_end(form) }}

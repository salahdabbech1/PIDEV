{% extends 'base.html.twig' %}
{% block body %}

<div class="row page-header" style="    margin-left: 0px;"><div class="col-lg-6 align-self-center ">
		<h2>Foo Tables</h2>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="#">Home</a></li>
			<li class="breadcrumb-item"><a href="#">Tables</a></li>
			<li class="breadcrumb-item active">Foo Tables</li>
		</ol></div></div>

<section class="main-content" style="    margin-left: 0px;">

	<div class="row">

		<div class="col-md-12">
			<div class="card">
				<div class="card-header card-default">
					Simple table with sorting, pagination and filter
				</div>
				<a href="admin/new" class="btn btn-primary btn-rounded box-shadow col-md-3" style="
					position: relative;
					left: 900px;
				">Add Actor</a>
				<div class="card-body">
					<input type="text" class="form-control margin-b-10 input-sm col-md-4" id="filter"
						   placeholder="Search in table">

					<table class="footable table table-hover" data-page-size="3" data-filter=#filter>
						<thead>
						<tr>
							<th>ID</th>
							<th>Name</th>
							<th data-hide="phone,tablet">BirthDay</th>
							<th data-hide="phone,tablet">Description</th>
							
							<th data-hide="phone,tablet">Action</th>
						</tr>
						</thead>
						<tbody>
						{% for tactor in tactors %}
							<tr>
								<td>{{ tactor.id }}</td>
								<td>
									<img alt="user" width="50" class="media-box-object rounded-circle mr-2" src="../../wp-content{{ tactor.image }}" width="30">
									{{ tactor.name }}
								</td>
								<td>{{ tactor.born ? tactor.born|date('Y/M/d') : '' }}</td>
								<td>{{ tactor.description }}</td>
							
								<td class="text-center">
									<a href="{{ path('tactor_edit', {'id': tactor.id}) }} " class="btn btn-sm btn-success"><i class="fa fa-pencil-square"></i></a>
									{{ include('tactor/_delete_form.html.twig') }}
								</td>
							</tr>
						{% endfor %}
						</tbody>
						<tfoot>
						<tr>
							<td colspan="5">
								<ul class="pagination float-right"></ul>
							</td>
						</tr>
						</tfoot>
					</table>

				</div>
			</div>
		</div>
	</div>



	<footer class="footer">
		<span>Copyright &copy; 2018 FixedPlus</span>
	</footer>


</section>
{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}
<div class="row page-header" style="    margin-left: 0px;"><div class="col-lg-6 align-self-center ">
        <h2>Theatre Tables</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Tables</a></li>
            <li class="breadcrumb-item active">Theatre Tables</li>
        </ol></div></div>

<section class="main-content" style="    margin-left: 0px;">

    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-default">
                    Theatres
                </div>
                <a href="admin/new" class="btn btn-primary btn-rounded box-shadow col-md-3" style="
					position: relative;
					left: 900px;
				">Add Theatre</a>
                <div class="card-body">
                    <input type="text" class="form-control margin-b-10 input-sm col-md-4" id="filter"
                           placeholder="Search in table">

                    <table class="footable table table-hover" data-page-size="4" data-filter=#filter>
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th data-hide="phone,tablet">Trailer</th>
                            <th data-hide="phone,tablet">Genre</th>
                            <th data-hide="phone,tablet">Release Date</th>
                          
                            <th data-hide="phone,tablet">Description</th>
                            <th data-hide="phone,tablet">Background</th>
                            <th data-hide="phone,tablet">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for theatre in theatres %}
                            <tr>
                                <td>{{ theatre.id }}</td>
                                <td>
                                    <img alt="user" width="50" class="media-box-object rounded-circle mr-2" src="../../wp-content{{ theatre.image }}" style="max-height: 50px;" width="30">
                                    {{ theatre.name }}
                                </td>
                                <td>{{ theatre.trailer }}</td>
                                <td>{{ theatre.genre }}</td>
                                <td>{{ theatre.rdate ? theatre.rdate|date('Y/M/d') : '' }}</td>
                                
                                <td>{{ theatre.description }}</td>

                                <td>
                                    <img alt="user" width="100" class="media-box-object rounded-circle mr-2" src="../../wp-content{{ theatre.poster }}" style="max-height: 75px;" width="30">
                                </td>
                                <td class="text-center">
                                    <!-- <a href="{{ path('theatre_show_back', {'id': theatre.id}) }}" class="btn btn-sm btn-info"><i class="fa fa-eye"></i></a>-->
                                    <a href="{{ path('theatre_edit', {'id': theatre.id}) }} " class="btn btn-sm btn-success"><i class="fa fa-pencil-square"></i></a>
                                    {{ include('theatre/_delete_form.html.twig') }}
                                
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <a href ="{{ path('stati') }}" class="btn btn-primary" >Statistics   <i class="fa fa-bar-chart"></i></a>
                        <a href ="{{ path('calendar') }}" class="btn btn-primary"style="margin:10px;" >Calendar   <i class="fa fa-calendar"></i></a>
                        <tfoot>
                        <tr>
                            <td colspan="5">
                                <ul class="pagination float-right"></ul>
                            </td>
                        </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>



    <footer class="footer">
        <span>Copyright &copy; 2018 FixedPlus</span>
    </footer>


</section>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    <h1>Reclamation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ reclamation.Titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reclamation.Description }}</td>
            </tr>
            <tr>
                <th>Traiter</th>
                <td>{{ reclamation.traiter }}</td>
            </tr>
            <tr>
                <th>Datere</th>
                <td>{{ reclamation.datere ? reclamation.datere|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reclamation_index') }}">back to list</a>

    <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}">edit</a>
    {% if reclamation.traiter =="traite" %}
        <button type="button" class="btn btn-round  btn-success"><i class="fa  fa-check-square-o"></i> Deja Traite  </button>

    {% else %}
        <button type="button" class="btn btn-round  btn-success"><i class="fa fa-square-o"></i> <a style="color: white" href="{{ path('reclamation_traite',{('id'):reclamation.id}) }}">traite  </a></button>

    {% endif %}



    {{ include('reclamation/_delete_form.html.twig') }}
{% endblock %}

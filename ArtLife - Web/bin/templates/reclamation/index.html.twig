{% extends 'base.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <h1>Reclamation index</h1>

    <table class="table" id="mytable" >
        <thead>
        <div class="container my-2">
            <input class="col-10" type="text" name="AfficherClasse" onkeyup="myFunction()" placeholder="rechercher " id="myInput">
        </div>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Traiter</th>
                <th>Datere</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.Titre }}</td>
                <td>{{ reclamation.Description }}</td>
                <td>{{ reclamation.traiter }}</td>
                <td>{{ reclamation.datere ? reclamation.datere|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}" class="btn btn-sm btn-success"><i class="fa fa-pencil-square"></i></a>



                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href ="{{ path('pdf2') }}" class="btn btn-primary" ><i class="fa fa-file"></i></a>
    <script>


        id="mytable"
        function myFunction() {
            var input, filter, table, tr, td, i,j, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("mytable");
            tr = table.getElementsByTagName("tr");
//   alert(td.length);
            for (i = 0; i < tr.length; i++) {
                td= tr[i].getElementsByTagName("td")[1];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }

            }

        }


    </script>

{% endblock %}

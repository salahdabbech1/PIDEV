{% extends 'base.html.twig' %}
{% block body %}
<div class="row page-header"><div class="col-lg-6 align-self-center ">
        <h2>Users Tables</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Tables</a></li>
            <li class="breadcrumb-item active">tickets Users</li>
        </ol></div></div>



    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-default">
                    Users
                </div>
                <a   href="{{ path('user_new') }}" class="btn btn-primary btn-rounded box-shadow col-md-3" style="
					position: relative;
					left: 900px;
				">Add User</a>
                <div class="card-body">
                    <input type="text" class="form-control margin-b-10 input-sm col-md-4" id="filter"
                           placeholder="Search in table">

                    <table class="footable table table-hover" data-page-size="12" data-filter=#filter>
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th data-hide="phone,tablet">Password</th>
                            <th data-hide="phone,tablet">Email</th>
                            <th data-hide="phone,tablet">Role</th>
                            <th data-hide="phone,tablet">Image</th>
                            <th data-hide="phone,tablet">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>
                                    <img alt="" width="50" class="media-box-object rounded-circle mr-2" src="../../wp-content{{ user.image }}" style="max-height: 50px;" width="30">
                                    {{ user.name }}
                                </td>
                                <td>{{ user.password }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.role }}</td>


                                <td>
                                    <img alt="user" width="100" class="media-box-object rounded-circle mr-2" src="../../wp-content{{ user.image }}" style="max-height: 75px;" width="30">
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('user_edit', {'id': user.id}) }} " class="btn btn-sm btn-success"><i class="fa fa-pencil-square"></i></a>
                                    {{ include('user/_delete_form.html.twig') }}


                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="5">
                                <ul class="pagination float-right"></ul>
                            </td>
                        </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>




    {% endblock %}



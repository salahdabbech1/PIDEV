{% extends 'base.html.twig' %}
{% block body %}
    <div class="row page-header"><div class="col-lg-6 align-self-center ">
            <h2>tickets Tables</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Tables</a></li>
                <li class="breadcrumb-item active">tickets Tables</li>
            </ol></div></div>



    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-default">
                    Users
                </div>
                <a   href="{{ path('ticket_new') }}" class="btn btn-primary btn-rounded box-shadow col-md-3" style="
					position: relative;
					left: 900px;
				">Add ticket</a>
                <div class="card-body">
                    <input type="text" class="form-control margin-b-10 input-sm col-md-4" id="filter"
                           placeholder="Search in table">

                    <table class="footable table table-hover" data-page-size="12" data-filter=#filter>
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>user</th>
                            <th data-hide="phone,tablet">date</th>
                            <th data-hide="phone,tablet">cinema</th>
                            <th data-hide="phone,tablet">salle</th>
                            <th data-hide="phone,tablet">chaise</th>
                            <th data-hide="phone,tablet">event</th>

                            <th data-hide="phone,tablet">montant</th>

                            <th data-hide="phone,tablet">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ticket in tickets %}
                            <tr>
                                <td>{{ ticket.id }}</td>
                                <td>{{ ticket.iduser }}</td>
                                <td>{{ ticket.date ? ticket.date|date('Y-m-d') : '' }}</td>
                                <td>{{ ticket.idcinema }}</td>
                                <td>{{ ticket.idsalle }}</td>
                                <td>{{ ticket.chaise }}</td>
                                <td>{{ ticket.idevent }}</td>
                                <td>{{ ticket.montant }}</td>

                                <td class="text-center">
                                    <a href="{{ path('ticket_edit', {'id': ticket.id}) }} " class="btn btn-sm btn-success"><i class="fa fa-pencil-square"></i></a>

                                    {{ include('ticket/_delete_form.html.twig') }}


                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="5">
                                <ul class="pagination float-right"></ul>
                            </td>
                        </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>




{% endblock %}


